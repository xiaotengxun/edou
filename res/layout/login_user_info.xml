<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res/com.edoucell.ych"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_height" >

        <com.yc.view.tools.TopBarView
            android:id="@+id/topbar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            test:text="@string/user_info"
            test:textColor="@color/color_white"
            test:textSize="@dimen/top_bar_title_text_size" >
        </com.yc.view.tools.TopBarView>

        <ImageView
            android:id="@+id/user_info_edit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/press_background"
            android:clickable="true"
            android:src="@drawable/edit_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_info_forecolor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:background="#7f000000" >
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:layout_marginBottom="1dp"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/rel_user_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/user_info_item_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/user_info_item_lable_width"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:text="@string/login_lable_true_name"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/user_info_item_textsize" />

                        <EditText
                            android:id="@+id/register_true_name"
                            android:layout_width="@dimen/user_info_item_edit_width"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:focusable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/user_info_item_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/user_info_item_lable_width"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:text="@string/login_lable_phone_number"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/user_info_item_textsize" />

                        <EditText
                            android:id="@+id/register_phone_number"
                            android:layout_width="@dimen/user_info_item_edit_width"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:focusable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/user_info_item_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/user_info_item_lable_width"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:text="@string/login_lable_email"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/user_info_item_textsize" />

                        <EditText
                            android:id="@+id/register_email"
                            android:layout_width="@dimen/user_info_item_edit_width"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:focusable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/user_info_item_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/user_info_item_lable_width"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:text="@string/login_lable_qq"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/user_info_item_textsize" />

                        <EditText
                            android:id="@+id/register_qq"
                            android:layout_width="@dimen/user_info_item_edit_width"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:focusable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_color" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_build"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_user_info"
                android:padding="20dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_bg"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/user_info_item_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/user_info_item_lable_width"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:text="@string/login_lable_user_type"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/user_info_item_textsize" />

                        <Spinner
                            android:id="@+id/register_type"
                            android:layout_width="@dimen/user_info_item_edit_width"
                            android:layout_height="fill_parent"
                            android:clickable="false"
                            android:entries="@array/user_type"
                            android:password="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/user_info_item_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/user_info_item_lable_width"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:text="@string/login_lable_building_name"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/user_info_item_textsize" />

                        <EditText
                            android:id="@+id/register_building_name"
                            android:layout_width="@dimen/user_info_item_edit_width"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:focusable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/user_info_item_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/user_info_item_lable_width"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:text="@string/login_lable_buliding_number"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/user_info_item_textsize" />

                        <EditText
                            android:id="@+id/register_building_number"
                            android:layout_width="@dimen/user_info_item_edit_width"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:focusable="false"
                            android:password="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/user_info_item_height"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/user_info_item_lable_width"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|right"
                            android:text="@string/login_lable_house_number"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/user_info_item_textsize" />

                        <EditText
                            android:id="@+id/register_house_number"
                            android:layout_width="@dimen/user_info_item_edit_width"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:focusable="false"
                            android:password="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/line_color" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_intro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_build"
                android:padding="20dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/input_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/user_info_item_height"
                        android:gravity="center_vertical"
                        android:text="@string/login_lable_user_description" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_color" />

                    <EditText
                        android:id="@+id/register_user_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:editable="true"
                        android:focusable="false"
                        android:inputType="textMultiLine"
                        android:maxLength="200"
                        android:paddingBottom="20dp"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textSize="@dimen/user_info_item_textsize" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_intro"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/user_info_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:text="@string/btn_submit"
                    android:textColor="@color/color_black"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>