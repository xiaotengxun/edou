<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/rel_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/cell_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_head" />

            <TextView
                android:id="@+id/cell_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/color_black"
                android:textSize="25sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_head"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/cell_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8f8d8d"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_company"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_location" >

        <TextView
            android:id="@+id/cell_company_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manager_cell_company"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cell_company_namt_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cell_company_lable"
            android:textColor="@color/color_black"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rel_company"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white" >

        <TextView
            android:id="@+id/cell_company_user_lable"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/manager_cell_company_contact_user"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cell_company_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/cell_phone_icon"
            android:gravity="center_vertical"
            android:text="@string/manager_cell_contact_phone"
            android:textColor="@color/color_black"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/manager_list_item_text_size" />

        <ImageView
            android:id="@+id/cell_phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/left_arror_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_cell_discription"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rel_phone"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/cell_description_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manager_cell_description"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/cell_description"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/cell_desction_lable"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:text="safsffasfsaf"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_cell_phone_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#6f000000"
        android:visibility="invisible" >

        <ListView
            android:id="@+id/cell_phone_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="200dp" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>